#!/bin/bash
# IPFS-Kit MCP convenience wrapper
# Allows: ./ipfs-kit-mcp start|stop|status [args]

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PY="$SCRIPT_DIR/.venv/bin/python"

if [ -x "$VENV_PY" ]; then
	exec "$VENV_PY" "$SCRIPT_DIR/ipfs-kit.py" mcp "$@"
else
	exec python "$SCRIPT_DIR/ipfs-kit.py" mcp "$@"
fi
