# Error Reporting Configuration

# Enable or disable automatic error reporting
ERROR_REPORTING_ENABLED=true

# GitHub configuration
# Get a personal access token from: https://github.com/settings/tokens
# The token needs 'repo' scope to create issues
GITHUB_TOKEN=your_github_token_here

# Repository where issues should be created
GITHUB_REPO_OWNER=endomorphosis
GITHUB_REPO_NAME=ipfs_kit_py

# Maximum number of error reports per hour (to prevent spam)
MAX_ERROR_REPORTS_PER_HOUR=10

# Error cache file location (stores reported errors to prevent duplicates)
ERROR_CACHE_FILE=~/.ipfs_kit_error_cache.json

# Minimum severity level to report (info, warning, error, critical)
MIN_ERROR_SEVERITY=error

# Labels to add to auto-generated issues
AUTO_LABELS=auto-generated,bug,error-report

# Context for error reports
ERROR_CONTEXT=IPFS Kit Production
