{
  "service_name": "com.user.lotusd",
  "lotus_path": "~/.lotus",
  "check_interval": 60,
  "auto_recover": true,
  "max_restart_attempts": 3,
  "restart_cooldown": 300,
  "collect_metrics": true,
  "metrics_path": "~/Library/Logs/lotus_metrics.json",
  "notification": {
    "enabled": true,
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "your_email@gmail.com",
      "password": "your_app_password",
      "from_addr": "your_email@gmail.com",
      "to_addr": "your_email@gmail.com",
      "use_tls": true
    }
  },
  "resource_thresholds": {
    "cpu_percent": 90,
    "memory_percent": 80,
    "disk_percent": 90
  }
}