#!/bin/bash
# IPFS-Kit CLI Wrapper
# Prefer the repo-local .venv Python if available.

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PY="$SCRIPT_DIR/.venv/bin/python"

if [ -x "$VENV_PY" ]; then
    exec "$VENV_PY" "$SCRIPT_DIR/ipfs-kit.py" "$@"
else
    exec python "$SCRIPT_DIR/ipfs-kit.py" "$@"
fi
